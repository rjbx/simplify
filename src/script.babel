class Calculator extends React.Component {
  constructor(props) {
    super(props);
    this.state = {
      expr: '',
      temp: '0',
      mode: false
    };
    WebFont.load({
      google: {
       families: ['Quantico:400,700i']
      }
    })
    this.handleChange = this.handleChange.bind(this);
    this.handleClick = this.handleClick.bind(this);
    this.toggleMode = this.toggleMode(this);
  }
  handleClick(event) {
    let id = event.target.id;
    console.log(event.target.id);
    switch (id) {
      case 'AC': this.handleInput(''); break;
      case 'toggle': this.toggleMode(); break;
      case '=': this.handleEval(); break;
      case 'del': this.handleInput(this.state.expr.slice(0,-1)); break;
      default: this.handleInput(this.state.expr + id);
    }
  }
  handleChange(event) {
    this.handleInput(event.target.value);
  }
  handleInput(value) {
    this.setState({
      expr: value
    });
  }
  handleEval() {
    let result = math.evaluate(this.state.expr);
    this.setState({
      expr: result
    });
  }
  toggleMode() {
    let inverse = !this.state.dark;
    this.setState({
      mode: inverse
    });
  }
  render() {
    return (
      <body>
        <Header mode={this.state.mode}/>
        <Main expr={this.state.expr} temp={this.state.temp} mode={this.state.mode} handleChange={this.handleChange} handleClick={this.handleClick} />
        <Footer mode={this.state.mode}/>
      </body>
    );
  }
};

